# Test Environment Configuration
# This file contains safe values for testing

# Api
NODE_ENV=test
TIME_ZONE=America/Lima
API_URL=http://localhost:5001
PORT=5001
MAX_PAYLOAD_SIZE=25kb

# Frontend
SITE_NAME='example.com'
SITE_URL=https://localhost:3000

# Session settings
SESSION_SECRET=test-session-secret-for-unit-tests

# Initial admin user
ADMIN_USERNAME=TestAdmin
ADMIN_EMAIL=test@example.com
ADMIN_PASSWORD=TestAdmin123*

# Bcrypt settings (lower for faster tests)
BCRYPT_SALT_ROUNDS=4

# SMTP settings (test values)
SMTP_HOST=smtp.test.com
SMTP_USER=test@test.com
SMTP_PASS=test-password

# FB settings (test values)
FB_CLIENT_ID=your-test-facebook-client-id
FB_CLIENT_SECRET=your-test-facebook-client-secret
FB_CALLBACK_URL=/api/v1/oauth/users/facebook/login
FB_SCOPE=email
FB_AUTH_URL='https://www.facebook.com/v23.0/dialog/oauth'
FB_TOKEN_API_URL='https://graph.facebook.com/v23.0/oauth/access_token'
FB_USER_API_URL=https://graph.facebook.com/v23.0/me

# GOOGLE settings (test values)
GOOGLE_CLIENT_ID=your-test-google-client-id
GOOGLE_CLIENT_SECRET=your-test-google-client-secret
GOOGLE_CALLBACK_URL=/api/v1/oauth/users/google/login
GOOGLE_SCOPE=https://www.googleapis.com/auth/userinfo.profile,https://www.googleapis.com/auth/userinfo.email
GOOGLE_AUTH_URL='https://accounts.google.com/o/oauth2/v2/auth'
GOOGLE_TOKEN_API_URL=https://oauth2.googleapis.com/token
GOOGLE_USER_API_URL=https://www.googleapis.com/oauth2/v2/userinfo

# Redis settings (test values)
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=test-redis-password

#MYSQL settings
DATABASE_URL="mysql://root:12345@localhost:3306/starter_api_prisma_template"
